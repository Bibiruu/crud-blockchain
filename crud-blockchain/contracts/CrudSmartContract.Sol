pragma solidity ^0.8.0;

contract CrudSmartContract {

    struct User {
        uint id;
        string name;
    }
    //array of users
    User[] public users;
    uint public nextId;

    mapping()

    function create(string memory name) public {
       users.push(User(nextId,name));
       nextId++; 
       User()
    }
    
}